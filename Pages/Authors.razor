@page "/authors"
@inject AuthorPageManager PageManager
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">‚úçÔ∏è Gestionare Autori</h1>
                <p class="page-subtitle">AdministreazƒÉ autorii din biblioteca ta</p>
            </div>
            <button class="btn btn-primary btn-animated" @onclick="PageManager.ToggleAddForm">
                @if (PageManager.ShowAddForm)
                {
                    <span>‚úñÔ∏è AnuleazƒÉ</span>
                }
                else
                {
                    <span>‚ûï AdaugƒÉ Autor</span>
                }
            </button>
        </div>

        <!-- Search -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="üîç CautƒÉ autori..." 
                       @bind="PageManager.SearchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <button class="btn btn-primary" @onclick="PageManager.ApplyFilters">
                    <span>üîç CautƒÉ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="PageManager.ClearFilters">
                    <span>üîÑ ReseteazƒÉ</span>
                </button>
            </div>
        </div>

        <!-- Authors List -->
        @if (PageManager.FilteredAuthors?.Any() == true)
        {
            <!-- Pagination Info -->
            <div id="authors-list-start" class="pagination-info">
                <span>Afi»ôare <strong>@PageManager.StartItem-@PageManager.EndItem</strong> din <strong>@PageManager.TotalItems</strong> autori</span>
                <div class="items-per-page">
                    <label>Afi»ôeazƒÉ:</label>
                    <select class="form-select form-select-sm" @onchange="@(async e => { PageManager.SetItemsPerPage(int.Parse(e.Value?.ToString() ?? "10")); await ScrollToResults(); StateHasChanged(); })">
                        <option value="10" selected="@(PageManager.ItemsPerPage == 10)">10</option>
                        <option value="25" selected="@(PageManager.ItemsPerPage == 25)">25</option>
                        <option value="50" selected="@(PageManager.ItemsPerPage == 50)">50</option>
                        <option value="100" selected="@(PageManager.ItemsPerPage == 100)">100</option>
                    </select>
                </div>
            </div>

            <div class="row">
                @foreach (var author in PageManager.PaginatedAuthors)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@author.Name</h5>
                                <p class="card-text">
                                    <strong>Email:</strong> @author.Email<br />
                                    @if (!string.IsNullOrEmpty(author.Biography))
                                    {
                                        <strong>Biografie:</strong> @((author.Biography.Length > 100) ? author.Biography.Substring(0, 100) + "..." : author.Biography)
                                    }
                                </p>
                                <div class="mt-3">
                                    <span class="badge bg-info text-dark">
                                        üìö @author.Books.Count cƒÉr»õi
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => PageManager.ShowEditFormFor(author)">
                                    ‚úèÔ∏è EditeazƒÉ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="async () => await DeleteAuthor(author.Id)">
                                    üóëÔ∏è »òterge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination Controls -->
            @if (PageManager.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="pagination-container">
                    <ul class="pagination pagination-modern">
                        <li class="page-item @(PageManager.CurrentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.PreviousPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == 1)">
                                <span>‚Äπ</span> Anterior
                            </button>
                        </li>

                        @if (PageManager.GetPageNumbers().First() > 1)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(1); await ScrollToResults(); StateHasChanged(); }">1</button>
                            </li>
                            @if (PageManager.GetPageNumbers().First() > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @foreach (var pageNum in PageManager.GetPageNumbers())
                        {
                            <li class="page-item @(PageManager.CurrentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(pageNum); await ScrollToResults(); StateHasChanged(); }">@pageNum</button>
                            </li>
                        }

                        @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages)
                        {
                            @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(PageManager.TotalPages); await ScrollToResults(); StateHasChanged(); }">@PageManager.TotalPages</button>
                            </li>
                        }

                        <li class="page-item @(PageManager.CurrentPage == PageManager.TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.NextPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == PageManager.TotalPages)">
                                UrmƒÉtorul <span>‚Ä∫</span>
                            </button>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">‚úçÔ∏è</div>
                <h3>Nu s-au gƒÉsit autori</h3>
                <p>@(string.IsNullOrEmpty(PageManager.SearchTerm) ? "√éncƒÉ nu ai adƒÉugat niciun autor." : "Nu existƒÉ autori care sƒÉ corespundƒÉ criteriilor de cƒÉutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(PageManager.ShowAddForm || PageManager.ShowEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(PageManager.ShowEditForm ? "EditeazƒÉ Autorul" : "AdaugƒÉ Autor Nou")</h3>
            
                        <EditForm Model="PageManager.CurrentAuthor" OnValidSubmit="SaveAuthor">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="PageManager.CurrentAuthor.Name" 
                               placeholder="Numele autorului..." />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Name)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <InputText type="email" class="form-control" @bind-Value="PageManager.CurrentAuthor.Email" 
                               placeholder="email@exemplu.com" />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Email)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Biografie</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="PageManager.CurrentAuthor.Biography" 
                                   placeholder="Scrie»õi o scurtƒÉ biografie..." />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Biography)" class="validation-message" />
                </div>

                @if (!string.IsNullOrEmpty(PageManager.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @PageManager.ErrorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(PageManager.ShowEditForm ? "ActualizeazƒÉ" : "AdaugƒÉ") Autorul
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="PageManager.CancelForm">
                        AnuleazƒÉ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await PageManager.LoadDataAsync();
        PageManager.LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        PageManager.LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PageManager.ApplyFilters();
        }
    }

    private async Task SaveAuthor()
    {
        var success = await PageManager.SaveAuthorAsync();
        if (success)
        {
            var message = PageManager.ShowEditForm ? "Autorul a fost actualizat cu succes! ‚úçÔ∏è" : "Autorul a fost adƒÉugat cu succes! ‚úçÔ∏è";
            await JS.InvokeVoidAsync("showToast", message, "success");
            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync("showToast", "Eroare la salvarea autorului! ‚ùå", "error");
        }
    }

    private async Task DeleteAuthor(int authorId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "E»ôti sigur cƒÉ vrei sƒÉ »ôtergi acest autor?");
        if (confirmed)
        {
            var success = await PageManager.DeleteAuthorAsync(authorId);
            if (success)
            {
                await JS.InvokeVoidAsync("showToast", "Autorul a fost »ôters cu succes! üóëÔ∏è", "success");
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("showToast", "Eroare la »ôtergerea autorului! ‚ùå", "error");
            }
        }
    }

    private async Task ScrollToResults()
    {
        try
        {
            await JS.InvokeVoidAsync("scrollToElement", "authors-list-start");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error scrolling: {ex.Message}");
        }
    }
}