@page "/authors"
@inject AuthorPageManager PageManager
@inject NavigationManager Navigation
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">âœï¸ Gestionare Autori</h1>
                <p class="page-subtitle">AdministreazÄƒ autorii din biblioteca ta</p>
            </div>
            <button class="btn btn-primary btn-animated" @onclick="PageManager.ToggleAddForm">
                @if (PageManager.ShowAddForm)
                {
                    <span>âœ–ï¸ AnuleazÄƒ</span>
                }
                else
                {
                    <span>â• AdaugÄƒ Autor</span>
                }
            </button>
        </div>

        <!-- Search -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="ğŸ” CautÄƒ autori..." 
                       @bind="PageManager.SearchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <button class="btn btn-primary" @onclick="PageManager.ApplyFilters">
                    <span>ğŸ” CautÄƒ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="PageManager.ClearFilters">
                    <span>ğŸ”„ ReseteazÄƒ</span>
                </button>
            </div>
        </div>

        <!-- Authors List -->
        @if (PageManager.FilteredAuthors?.Any() == true)
        {
            <div class="row">
                @foreach (var author in PageManager.FilteredAuthors)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@author.Name</h5>
                                <p class="card-text">
                                    <strong>Email:</strong> @author.Email<br />
                                    @if (!string.IsNullOrEmpty(author.Biography))
                                    {
                                        <strong>Biografie:</strong> @((author.Biography.Length > 100) ? author.Biography.Substring(0, 100) + "..." : author.Biography)
                                    }
                                </p>
                                <div class="mt-3">
                                    <span class="badge bg-info text-dark">
                                        ğŸ“š @author.Books.Count cÄƒrÈ›i
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => PageManager.ShowEditFormFor(author)">
                                    âœï¸ EditeazÄƒ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="async () => await DeleteAuthor(author.Id)">
                                    ğŸ—‘ï¸ È˜terge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">âœï¸</div>
                <h3>Nu s-au gÄƒsit autori</h3>
                <p>@(string.IsNullOrEmpty(PageManager.SearchTerm) ? "ÃncÄƒ nu ai adÄƒugat niciun autor." : "Nu existÄƒ autori care sÄƒ corespundÄƒ criteriilor de cÄƒutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(PageManager.ShowAddForm || PageManager.ShowEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(PageManager.ShowEditForm ? "EditeazÄƒ Autorul" : "AdaugÄƒ Autor Nou")</h3>
            
                        <EditForm Model="PageManager.CurrentAuthor" OnValidSubmit="SaveAuthor">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="PageManager.CurrentAuthor.Name" 
                               placeholder="Numele autorului..." />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Name)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <InputText type="email" class="form-control" @bind-Value="PageManager.CurrentAuthor.Email" 
                               placeholder="email@exemplu.com" />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Email)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Biografie</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="PageManager.CurrentAuthor.Biography" 
                                   placeholder="ScrieÈ›i o scurtÄƒ biografie..." />
                    <ValidationMessage For="@(() => PageManager.CurrentAuthor.Biography)" class="validation-message" />
                </div>

                @if (!string.IsNullOrEmpty(PageManager.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @PageManager.ErrorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(PageManager.ShowEditForm ? "ActualizeazÄƒ" : "AdaugÄƒ") Autorul
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="PageManager.CancelForm">
                        AnuleazÄƒ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await PageManager.LoadDataAsync();
        PageManager.LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        PageManager.LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PageManager.ApplyFilters();
        }
    }

    private async Task SaveAuthor()
    {
        var success = await PageManager.SaveAuthorAsync();
        if (success)
        {
            StateHasChanged();
        }
    }

    private async Task DeleteAuthor(int authorId)
    {
        if (confirm("EÈ™ti sigur cÄƒ vrei sÄƒ È™tergi acest autor?"))
        {
            var success = await PageManager.DeleteAuthorAsync(authorId);
            if (success)
            {
                StateHasChanged();
            }
        }
    }

    private bool confirm(string message)
    {
        return true;
    }
}