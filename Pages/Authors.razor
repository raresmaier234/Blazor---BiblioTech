@page "/authors"
@inject IAuthorService AuthorService
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.WebUtilities
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">‚úçÔ∏è Gestionare Autori</h1>
                <p class="page-subtitle">AdministreazƒÉ autorii din biblioteca ta</p>
            </div>
            <button class="btn btn-primary btn-animated" @onclick="ToggleAddForm">
                @if (showAddForm)
                {
                    <span>‚úñÔ∏è AnuleazƒÉ</span>
                }
                else
                {
                    <span>‚ûï AdaugƒÉ Autor</span>
                }
            </button>
        </div>

        <!-- Search -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="üîç CautƒÉ autori..." 
                       @bind="searchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <button class="btn btn-primary" @onclick="ApplyFilters">
                    <span>üîç CautƒÉ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="ClearFilters">
                    <span>üîÑ ReseteazƒÉ</span>
                </button>
            </div>
        </div>

        <!-- Authors List -->
        @if (filteredAuthors?.Any() == true)
        {
            <div class="row">
                @foreach (var author in filteredAuthors)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@author.Name</h5>
                                <p class="card-text">
                                    <strong>Email:</strong> @author.Email<br />
                                    @if (!string.IsNullOrEmpty(author.Biography))
                                    {
                                        <strong>Biografie:</strong> @((author.Biography.Length > 100) ? author.Biography.Substring(0, 100) + "..." : author.Biography)
                                    }
                                </p>
                                <div class="mt-3">
                                    <span class="badge bg-info text-dark">
                                        üìö @author.Books.Count cƒÉr»õi
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => ShowEditForm(author)">
                                    ‚úèÔ∏è EditeazƒÉ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteAuthor(author.Id)">
                                    üóëÔ∏è »òterge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">‚úçÔ∏è</div>
                <h3>Nu s-au gƒÉsit autori</h3>
                <p>@(string.IsNullOrEmpty(searchTerm) ? "√éncƒÉ nu ai adƒÉugat niciun autor." : "Nu existƒÉ autori care sƒÉ corespundƒÉ criteriilor de cƒÉutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(showAddForm || showEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(showEditForm ? "EditeazƒÉ Autorul" : "AdaugƒÉ Autor Nou")</h3>
            
            <EditForm Model="@currentAuthor" OnValidSubmit="SaveAuthor">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="currentAuthor.Name" 
                               placeholder="Numele autorului..." />
                    <ValidationMessage For="@(() => currentAuthor.Name)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <InputText type="email" class="form-control" @bind-Value="currentAuthor.Email" 
                               placeholder="email@exemplu.com" />
                    <ValidationMessage For="@(() => currentAuthor.Email)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Biografie</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="currentAuthor.Biography" 
                                   placeholder="Scrie»õi o scurtƒÉ biografie..." />
                    <ValidationMessage For="@(() => currentAuthor.Biography)" class="validation-message" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(showEditForm ? "ActualizeazƒÉ" : "AdaugƒÉ") Autorul
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                        AnuleazƒÉ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<Author>? authors;
    private List<Author>? filteredAuthors;
    private bool showAddForm = false;
    private bool showEditForm = false;
    private string searchTerm = "";
    private Author currentAuthor = new Author { Name = "", Email = "" };
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await LoadData();
        LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void LoadFiltersFromQueryString()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);
        
        searchTerm = query.TryGetValue("search", out var searchValue) ? searchValue.ToString() : "";
        
        FilterAuthors();
    }

    private async Task LoadData()
    {
        try
        {
            authors = await AuthorService.GetAllAuthorsAsync();
            FilterAuthors();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void ApplyFilters()
    {
        var queryParams = new Dictionary<string, string?>();
        
        if (!string.IsNullOrEmpty(searchTerm))
        {
            queryParams["search"] = searchTerm;
        }

        var uri = QueryHelpers.AddQueryString("/authors", queryParams);
        Navigation.NavigateTo(uri);
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            ApplyFilters();
        }
    }

    private void ClearFilters()
    {
        searchTerm = "";
        Navigation.NavigateTo("/authors");
    }

    private void FilterAuthors()
    {
        if (authors == null)
        {
            filteredAuthors = new List<Author>();
            return;
        }

        filteredAuthors = authors.Where(author =>
            string.IsNullOrEmpty(searchTerm) || 
            author.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            author.Email.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        ).ToList();

        StateHasChanged();
    }

    private void ToggleAddForm()
    {
        showAddForm = !showAddForm;
        showEditForm = false;
        if (showAddForm)
        {
            currentAuthor = new Author { Name = "", Email = "" };
        }
    }

    private void ShowEditForm(Author author)
    {
        showEditForm = true;
        showAddForm = false;
        currentAuthor = new Author 
        { 
            Id = author.Id,
            Name = author.Name,
            Email = author.Email,
            Biography = author.Biography
        };
    }

    private void CancelForm()
    {
        showAddForm = false;
        showEditForm = false;
        errorMessage = "";
    }

    private async Task SaveAuthor()
    {
        try
        {
            errorMessage = "";

            if (showEditForm)
            {
                await AuthorService.UpdateAuthorAsync(currentAuthor.Id, currentAuthor);
            }
            else
            {
                await AuthorService.CreateAuthorAsync(currentAuthor);
            }

            await LoadData();
            CancelForm();
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = "A apƒÉrut o eroare la salvarea autorului. Te rugƒÉm sƒÉ √Æncerci din nou.";
            Console.WriteLine($"Error saving author: {ex.Message}");
        }
    }

    private async Task DeleteAuthor(int authorId)
    {
        try
        {
            if (confirm("E»ôti sigur cƒÉ vrei sƒÉ »ôtergi acest autor?"))
            {
                await AuthorService.DeleteAuthorAsync(authorId);
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting author: {ex.Message}");
        }
    }

    private bool confirm(string message)
    {
        // √én o aplica»õie realƒÉ, ai folosi JSInterop pentru confirm
        return true; // Pentru simplitate, returnƒÉm true
    }
}