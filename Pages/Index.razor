@code {
    private List<Book>? recentBooks;
    private int totalBooks = 0;
    private int totalAuthors = 0;
    private int totalCategories = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            recentBooks = await BookService.GetRecentBooksAsync(3);

            var allBooks = await BookService.GetAllBooksAsync();
            totalBooks = allBooks.Count;

            var allAuthors = await AuthorService.GetAllAuthorsAsync();
            totalAuthors = allAuthors.Count;

            var allCategories = await CategoryService.GetAllCategoriesAsync();
            totalCategories = allCategories.Count;
        }
        catch (Exception ex)
        {
            // Log error - Ã®n producÈ›ie ar trebui sÄƒ folosim ILogger
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
        finally
        {
