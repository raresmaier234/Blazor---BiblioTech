                </div>
                
                <div class="mb-3">
                    <label class="form-label">Descriere</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="PageManager.CurrentCategory.Description" 
                                   placeholder="DescrieÈ›i categoria..." />
