    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(PageManager.ShowAddForm || PageManager.ShowEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(PageManager.ShowEditForm ? "EditeazÄƒ Categoria" : "AdaugÄƒ Categorie NouÄƒ")</h3>
            
            <EditForm Model="PageManager.CurrentCategory" OnValidSubmit="SaveCategory">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="PageManager.CurrentCategory.Name" 
                               placeholder="Ex: FicÈ›iune, È˜tiinÈ›e, Istorie..." />
