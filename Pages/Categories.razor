@page "/categories"
@inject CategoryPageManager PageManager
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">ğŸ·ï¸ Gestionare categorii</h1>
                <p class="page-subtitle">OrganizeazÄƒ cÄƒrÈ›ile Ã®n categorii tematice</p>
            </div>
            <button class="btn btn-primary btn-animated" @onclick="PageManager.ToggleAddForm">
                @if (PageManager.ShowAddForm)
                {
                    <span>âœ–ï¸ AnuleazÄƒ</span>
                }
                else
                {
                    <span>â• AdaugÄƒ Categorie</span>
                }
            </button>
        </div>

        <!-- Search -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="ğŸ” CautÄƒ categorii..." 
                       @bind="PageManager.SearchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <button class="btn btn-primary" @onclick="PageManager.ApplyFilters">
                    <span>ğŸ” CautÄƒ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="PageManager.ClearFilters">
                    <span>ğŸ”„ ReseteazÄƒ</span>
                </button>
            </div>
        </div>

        <!-- Categories List -->
        @if (PageManager.FilteredCategories?.Any() == true)
        {
            <!-- Pagination Info -->
            <div id="categories-list-start" class="pagination-info">
                <span>AfiÈ™are <strong>@PageManager.StartItem-@PageManager.EndItem</strong> din <strong>@PageManager.TotalItems</strong> categorii</span>
                <div class="items-per-page">
                    <label>AfiÈ™eazÄƒ:</label>
                    <select class="form-select form-select-sm" @onchange="@(async e => { PageManager.SetItemsPerPage(int.Parse(e.Value?.ToString() ?? "10")); await ScrollToResults(); StateHasChanged(); })">
                        <option value="10" selected="@(PageManager.ItemsPerPage == 10)">10</option>
                        <option value="25" selected="@(PageManager.ItemsPerPage == 25)">25</option>
                        <option value="50" selected="@(PageManager.ItemsPerPage == 50)">50</option>
                        <option value="100" selected="@(PageManager.ItemsPerPage == 100)">100</option>
                    </select>
                </div>
            </div>

            <div class="row">
                @foreach (var category in PageManager.PaginatedCategories)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@category.Name</h5>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <p class="card-text">
                                        @((category.Description.Length > 100) ? category.Description.Substring(0, 100) + "..." : category.Description)
                                    </p>
                                }
                                <div class="mt-3">
                                    <span class="badge bg-info text-dark">
                                        ğŸ“š @category.BookCategories.Count cÄƒrÈ›i
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => PageManager.ShowEditFormFor(category)">
                                    âœï¸ EditeazÄƒ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteCategory(category.Id)">
                                    ğŸ—‘ï¸ È˜terge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination Controls -->
            @if (PageManager.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="pagination-container">
                    <ul class="pagination pagination-modern">
                        <li class="page-item @(PageManager.CurrentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.PreviousPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == 1)">
                                <span>â€¹</span> Anterior
                            </button>
                        </li>

                        @if (PageManager.GetPageNumbers().First() > 1)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(1); await ScrollToResults(); StateHasChanged(); }">1</button>
                            </li>
                            @if (PageManager.GetPageNumbers().First() > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @foreach (var pageNum in PageManager.GetPageNumbers())
                        {
                            <li class="page-item @(PageManager.CurrentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(pageNum); await ScrollToResults(); StateHasChanged(); }">@pageNum</button>
                            </li>
                        }

                        @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages)
                        {
                            @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(PageManager.TotalPages); await ScrollToResults(); StateHasChanged(); }">@PageManager.TotalPages</button>
                            </li>
                        }

                        <li class="page-item @(PageManager.CurrentPage == PageManager.TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.NextPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == PageManager.TotalPages)">
                                UrmÄƒtorul <span>â€º</span>
                            </button>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">ğŸ·ï¸</div>
                <h3>Nu s-au gÄƒsit categorii</h3>
                <p>@(string.IsNullOrEmpty(PageManager.SearchTerm) ? "ÃncÄƒ nu ai adÄƒugat nicio categorie." : "Nu existÄƒ categorii care sÄƒ corespundÄƒ criteriilor de cÄƒutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(PageManager.ShowAddForm || PageManager.ShowEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(PageManager.ShowEditForm ? "EditeazÄƒ Categoria" : "AdaugÄƒ Categorie NouÄƒ")</h3>
            
            <EditForm Model="PageManager.CurrentCategory" OnValidSubmit="SaveCategory">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="PageManager.CurrentCategory.Name" 
                               placeholder="Ex: FicÈ›iune, È˜tiinÈ›e, Istorie..." />
                    <ValidationMessage For="@(() => PageManager.CurrentCategory.Name)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Descriere</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="PageManager.CurrentCategory.Description" 
                                   placeholder="DescrieÈ›i categoria..." />
                    <ValidationMessage For="@(() => PageManager.CurrentCategory.Description)" class="validation-message" />
                </div>

                @if (!string.IsNullOrEmpty(PageManager.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @PageManager.ErrorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(PageManager.ShowEditForm ? "ActualizeazÄƒ" : "AdaugÄƒ") Categoria
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="PageManager.CancelForm">
                        AnuleazÄƒ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await PageManager.LoadDataAsync();
        PageManager.LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        PageManager.LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PageManager.ApplyFilters();
        }
    }

    private async Task SaveCategory()
    {
        var success = await PageManager.SaveCategoryAsync();
        if (success)
        {
            var message = PageManager.ShowEditForm ? "Categoria a fost actualizatÄƒ cu succes! ğŸ·ï¸" : "Categoria a fost adÄƒugatÄƒ cu succes! ğŸ·ï¸";
            await JS.InvokeVoidAsync("showToast", message, "success");
            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync("showToast", "Eroare la salvarea categoriei! âŒ", "error");
        }
    }

    private async Task DeleteCategory(int categoryId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "EÈ™ti sigur cÄƒ vrei sÄƒ È™tergi aceastÄƒ categorie?");
        if (confirmed)
        {
            var success = await PageManager.DeleteCategoryAsync(categoryId);
            if (success)
            {
                await JS.InvokeVoidAsync("showToast", "Categoria a fost È™tearsÄƒ cu succes! ğŸ—‘ï¸", "success");
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("showToast", "Eroare la È™tergerea categoriei! âŒ", "error");
            }
        }
    }

    private async Task ScrollToResults()
    {
        try
        {
            await JS.InvokeVoidAsync("scrollToElement", "categories-list-start");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error scrolling: {ex.Message}");
        }
    }
}