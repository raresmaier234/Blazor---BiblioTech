            </EditForm>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await PageManager.LoadDataAsync();
        PageManager.LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        PageManager.LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PageManager.ApplyFilters();
        }
    }

    private async Task SaveCategory()
    {
        var success = await PageManager.SaveCategoryAsync();
        if (success)
        {
            StateHasChanged();
        }
    }

    private async Task DeleteCategory(int categoryId)
    {
        if (confirm("EÈ™ti sigur cÄƒ vrei sÄƒ È™tergi aceastÄƒ categorie?"))
        {
            var success = await PageManager.DeleteCategoryAsync(categoryId);
            if (success)
            {
                StateHasChanged();
            }
        }
    }

    private bool confirm(string message)
    {
        return true;
    }
}