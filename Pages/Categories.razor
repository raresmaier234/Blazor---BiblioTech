@page "/categories"
@inject ICategoryService CategoryService
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.WebUtilities
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">üè∑Ô∏è Gestionare Categorii</h1>
                <p class="page-subtitle">OrganizeazƒÉ cƒÉr»õile √Æn categorii tematice</p>
            </div>
            <button class="btn btn-primary btn-animated" @onclick="ToggleAddForm">
                @if (showAddForm)
                {
                    <span>‚úñÔ∏è AnuleazƒÉ</span>
                }
                else
                {
                    <span>‚ûï AdaugƒÉ Categorie</span>
                }
            </button>
        </div>

        <!-- Search -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="üîç CautƒÉ categorii..." 
                       @bind="searchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <button class="btn btn-primary" @onclick="ApplyFilters">
                    <span>üîç CautƒÉ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="ClearFilters">
                    <span>üîÑ ReseteazƒÉ</span>
                </button>
            </div>
        </div>

        <!-- Categories List -->
        @if (filteredCategories?.Any() == true)
        {
            <div class="row">
                @foreach (var category in filteredCategories)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@category.Name</h5>
                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <p class="card-text">
                                        @((category.Description.Length > 100) ? category.Description.Substring(0, 100) + "..." : category.Description)
                                    </p>
                                }
                                <div class="mt-3">
                                    <span class="badge bg-info text-dark">
                                        üìö @category.BookCategories.Count cƒÉr»õi
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-transparent">
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => ShowEditForm(category)">
                                    ‚úèÔ∏è EditeazƒÉ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteCategory(category.Id)">
                                    üóëÔ∏è »òterge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">üè∑Ô∏è</div>
                <h3>Nu s-au gƒÉsit categorii</h3>
                <p>@(string.IsNullOrEmpty(searchTerm) ? "√éncƒÉ nu ai adƒÉugat nicio categorie." : "Nu existƒÉ categorii care sƒÉ corespundƒÉ criteriilor de cƒÉutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(showAddForm || showEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(showEditForm ? "EditeazƒÉ Categoria" : "AdaugƒÉ Categorie NouƒÉ")</h3>
            
            <EditForm Model="@currentCategory" OnValidSubmit="SaveCategory">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Nume *</label>
                    <InputText class="form-control" @bind-Value="currentCategory.Name" 
                               placeholder="Ex: Fic»õiune, »òtiin»õe, Istorie..." />
                    <ValidationMessage For="@(() => currentCategory.Name)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Descriere</label>
                    <InputTextArea class="form-control" rows="4" @bind-Value="currentCategory.Description" 
                                   placeholder="Descrie»õi categoria..." />
                    <ValidationMessage For="@(() => currentCategory.Description)" class="validation-message" />
                </div>

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">
                        @errorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(showEditForm ? "ActualizeazƒÉ" : "AdaugƒÉ") Categoria
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="CancelForm">
                        AnuleazƒÉ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private List<Category>? categories;
    private List<Category>? filteredCategories;
    private bool showAddForm = false;
    private bool showEditForm = false;
    private string searchTerm = "";
    private Category currentCategory = new Category { Name = "" };
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await LoadData();
        LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void LoadFiltersFromQueryString()
    {
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);
        
        searchTerm = query.TryGetValue("search", out var searchValue) ? searchValue.ToString() : "";
        
        FilterCategories();
    }

    private async Task LoadData()
    {
        try
        {
            categories = await CategoryService.GetAllCategoriesAsync();
            FilterCategories();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
        }
    }

    private void ApplyFilters()
    {
        var queryParams = new Dictionary<string, string?>();
        
        if (!string.IsNullOrEmpty(searchTerm))
        {
            queryParams["search"] = searchTerm;
        }

        var uri = QueryHelpers.AddQueryString("/categories", queryParams);
        Navigation.NavigateTo(uri);
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            ApplyFilters();
        }
    }

    private void ClearFilters()
    {
        searchTerm = "";
        Navigation.NavigateTo("/categories");
    }

    private void FilterCategories()
    {
        if (categories == null)
        {
            filteredCategories = new List<Category>();
            return;
        }

        filteredCategories = categories.Where(category =>
            string.IsNullOrEmpty(searchTerm) || 
            category.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            (category.Description != null && category.Description.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        ).ToList();

        StateHasChanged();
    }

    private void ToggleAddForm()
    {
        showAddForm = !showAddForm;
        showEditForm = false;
        if (showAddForm)
        {
            currentCategory = new Category { Name = "" };
        }
    }

    private void ShowEditForm(Category category)
    {
        showEditForm = true;
        showAddForm = false;
        currentCategory = new Category 
        { 
            Id = category.Id,
            Name = category.Name,
            Description = category.Description
        };
    }

    private void CancelForm()
    {
        showAddForm = false;
        showEditForm = false;
        errorMessage = "";
    }

    private async Task SaveCategory()
    {
        try
        {
            errorMessage = "";

            if (showEditForm)
            {
                await CategoryService.UpdateCategoryAsync(currentCategory.Id, currentCategory);
            }
            else
            {
                await CategoryService.CreateCategoryAsync(currentCategory);
            }

            await LoadData();
            CancelForm();
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception ex)
        {
            errorMessage = "A apƒÉrut o eroare la salvarea categoriei. Te rugƒÉm sƒÉ √Æncerci din nou.";
            Console.WriteLine($"Error saving category: {ex.Message}");
        }
    }

    private async Task DeleteCategory(int categoryId)
    {
        try
        {
            if (confirm("E»ôti sigur cƒÉ vrei sƒÉ »ôtergi aceastƒÉ categorie?"))
            {
                await CategoryService.DeleteCategoryAsync(categoryId);
                await LoadData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting category: {ex.Message}");
        }
    }

    private bool confirm(string message)
    {
        // √én o aplica»õie realƒÉ, ai folosi JSInterop pentru confirm
        return true; // Pentru simplitate, returnƒÉm true
    }
}