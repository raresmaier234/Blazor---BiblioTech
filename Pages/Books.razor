@page "/books"
@inject BookPageManager PageManager
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="content-grid">
    <!-- Main Content -->
    <div class="main-column">
        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <h1 class="page-title">ğŸ“– Gestionare CÄƒrÈ›i</h1>
                <p class="page-subtitle">AdministreazÄƒ colecÈ›ia ta de cÄƒrÈ›i cu uÈ™urinÈ›Äƒ</p>
            </div>
            <div class="header-actions">
                <button class="btn btn-success btn-animated" @onclick="DownloadCSV">
                    <span>ğŸ“¥ Export CSV</span>
                </button>
                <button class="btn btn-primary btn-animated" @onclick="PageManager.ToggleAddForm">
                    @if (PageManager.ShowAddForm)
                    {
                        <span>âœ–ï¸ AnuleazÄƒ</span>
                    }
                    else
                    {
                        <span>â• AdaugÄƒ Carte</span>
                    }
                </button>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="search-section">
            <div class="search-box-container">
                <input type="text" class="search-input" placeholder="ğŸ” CautÄƒ dupÄƒ titlu sau autor..." 
                       @bind="PageManager.SearchTerm" @onkeypress="HandleKeyPress" />
            </div>
            <div class="filter-section">
                <select class="filter-select" @bind="PageManager.FilterAuthorId">
                    <option value="">ToÈ›i autorii</option>
                    @if (PageManager.Authors != null)
                    {
                        @foreach (var author in PageManager.Authors)
                        {
                            <option value="@author.Id">@author.Name</option>
                        }
                    }
                </select>
                <select class="filter-select" @bind="PageManager.FilterCategoryId">
                    <option value="">Toate categoriile</option>
                    @if (PageManager.Categories != null)
                    {
                        @foreach (var category in PageManager.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                <button class="btn btn-primary" @onclick="PageManager.ApplyFilters">
                    <span>ğŸ” CautÄƒ</span>
                </button>
                <button class="btn btn-outline-secondary" @onclick="PageManager.ClearFilters">
                    <span>ğŸ”„ ReseteazÄƒ</span>
                </button>
            </div>
        </div>

        <!-- Books List -->
        @if (PageManager.FilteredBooks?.Any() == true)
        {
            <!-- Pagination Info -->
            <div id="books-list-start" class="pagination-info">
                <span>AfiÈ™are <strong>@PageManager.StartItem-@PageManager.EndItem</strong> din <strong>@PageManager.TotalItems</strong> cÄƒrÈ›i</span>
                <div class="items-per-page">
                    <label>AfiÈ™eazÄƒ:</label>
                    <select class="form-select form-select-sm" @onchange="@(async e => { PageManager.SetItemsPerPage(int.Parse(e.Value?.ToString() ?? "10")); await ScrollToResults(); StateHasChanged(); })">
                        <option value="10" selected="@(PageManager.ItemsPerPage == 10)">10</option>
                        <option value="25" selected="@(PageManager.ItemsPerPage == 25)">25</option>
                        <option value="50" selected="@(PageManager.ItemsPerPage == 50)">50</option>
                        <option value="100" selected="@(PageManager.ItemsPerPage == 100)">100</option>
                    </select>
                </div>
            </div>

            <div class="row">
                @foreach (var book in PageManager.PaginatedBooks)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">@book.Title</h5>
                                <p class="card-text">
                                    <strong>Autor:</strong> @(book.Author?.Name ?? "Necunoscut")<br />
                                    <strong>An:</strong> @book.Year
                                </p>
                                @if (book.BookCategories?.Any() == true)
                                {
                                    <div class="mb-3">
                                        @foreach (var bookCategory in book.BookCategories)
                                        {
                                            <span class="badge bg-secondary me-1">@(bookCategory.Category?.Name ?? "N/A")</span>
                                        }
                                    </div>
                                }
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="/books/@book.Id" class="btn btn-primary btn-sm me-2">
                                    ğŸ‘ï¸ Detalii
                                </a>
                                <button class="btn btn-warning btn-sm me-2" @onclick="() => PageManager.ShowEditFormFor(book)">
                                    âœï¸ EditeazÄƒ
                                </button>
                                <button class="btn btn-danger btn-sm" @onclick="async () => await DeleteBook(book.Id)">
                                    ğŸ—‘ï¸ È˜terge
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination Controls -->
            @if (PageManager.TotalPages > 1)
            {
                <nav aria-label="Page navigation" class="pagination-container">
                    <ul class="pagination pagination-modern">
                        <li class="page-item @(PageManager.CurrentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.PreviousPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == 1)">
                                <span>â€¹</span> Anterior
                            </button>
                        </li>

                        @if (PageManager.GetPageNumbers().First() > 1)
                        {
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(1); await ScrollToResults(); StateHasChanged(); }">1</button>
                            </li>
                            @if (PageManager.GetPageNumbers().First() > 2)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                        }

                        @foreach (var pageNum in PageManager.GetPageNumbers())
                        {
                            <li class="page-item @(PageManager.CurrentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(pageNum); await ScrollToResults(); StateHasChanged(); }">@pageNum</button>
                            </li>
                        }

                        @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages)
                        {
                            @if (PageManager.GetPageNumbers().Last() < PageManager.TotalPages - 1)
                            {
                                <li class="page-item disabled">
                                    <span class="page-link">...</span>
                                </li>
                            }
                            <li class="page-item">
                                <button class="page-link" @onclick="async () => { PageManager.GoToPage(PageManager.TotalPages); await ScrollToResults(); StateHasChanged(); }">@PageManager.TotalPages</button>
                            </li>
                        }

                        <li class="page-item @(PageManager.CurrentPage == PageManager.TotalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="async () => { PageManager.NextPage(); await ScrollToResults(); StateHasChanged(); }" disabled="@(PageManager.CurrentPage == PageManager.TotalPages)">
                                UrmÄƒtorul <span>â€º</span>
                            </button>
                        </li>
                    </ul>
                </nav>
            }
        }
        else
        {
            <div class="empty-state">
                <div style="font-size: 4rem; margin-bottom: 1rem;">ğŸ“š</div>
                <h3>Nu s-au gÄƒsit cÄƒrÈ›i</h3>
                <p>@(string.IsNullOrEmpty(PageManager.SearchTerm) ? "ÃncÄƒ nu ai adÄƒugat nicio carte." : "Nu existÄƒ cÄƒrÈ›i care sÄƒ corespundÄƒ criteriilor de cÄƒutare.")</p>
            </div>
        }
    </div>

    <!-- Sidebar Form -->
    <div class="sidebar-form @(PageManager.ShowAddForm || PageManager.ShowEditForm ? "show" : "")">
        <div class="form-card">
            <h3>@(PageManager.ShowEditForm ? "EditeazÄƒ Cartea" : "AdaugÄƒ Carte NouÄƒ")</h3>
            
            <EditForm Model="@PageManager.CurrentBook" OnValidSubmit="SaveBook">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label class="form-label">Titlu *</label>
                    <InputText class="form-control" @bind-Value="PageManager.CurrentBook.Title" />
                    <ValidationMessage For="@(() => PageManager.CurrentBook.Title)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Anul publicÄƒrii *</label>
                    <InputNumber class="form-control" @bind-Value="PageManager.CurrentBook.Year" />
                    <ValidationMessage For="@(() => PageManager.CurrentBook.Year)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Autor *</label>
                    <InputSelect class="form-control" @bind-Value="PageManager.CurrentBook.AuthorId">
                        <option value="0">SelecteazÄƒ un autor</option>
                        @if (PageManager.Authors != null)
                        {
                            @foreach (var author in PageManager.Authors)
                            {
                                <option value="@author.Id">@author.Name</option>
                            }
                        }
                    </InputSelect>
                    <ValidationMessage For="@(() => PageManager.CurrentBook.AuthorId)" class="validation-message" />
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Categorii *</label>
                    <div class="categories-grid @(PageManager.ShowCategoryError ? "error" : "")">
                        @if (PageManager.Categories != null)
                        {
                            @foreach (var category in PageManager.Categories)
                            {
                                <div class="category-checkbox">
                                    <input type="checkbox" 
                                           id="cat-@category.Id" 
                                           @onchange="@((e) => PageManager.ToggleCategory(category.Id, (bool)e.Value!))"
                                           checked="@PageManager.SelectedCategoryIds.Contains(category.Id)" />
                                    <label for="cat-@category.Id">@category.Name</label>
                                </div>
                            }
                        }
                    </div>
                    @if (PageManager.ShowCategoryError)
                    {
                        <span class="validation-message">SelecteazÄƒ cel puÈ›in o categorie.</span>
                    }
                </div>

                @if (!string.IsNullOrEmpty(PageManager.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @PageManager.ErrorMessage
                    </div>
                }
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        @(PageManager.ShowEditForm ? "ActualizeazÄƒ" : "AdaugÄƒ") Cartea
                    </button>
                    <button type="button" class="btn btn-secondary" @onclick="PageManager.CancelForm">
                        AnuleazÄƒ
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        Navigation.LocationChanged += OnLocationChanged;
        await PageManager.LoadDataAsync();
        PageManager.LoadFiltersFromQueryString();
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        PageManager.LoadFiltersFromQueryString();
        StateHasChanged();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            PageManager.ApplyFilters();
        }
    }

    private async Task SaveBook()
    {
        var success = await PageManager.SaveBookAsync();
        if (success)
        {
            var message = PageManager.ShowEditForm ? "Cartea a fost actualizatÄƒ cu succes! ğŸ“š" : "Cartea a fost adÄƒugatÄƒ cu succes! ğŸ“š";
            await JS.InvokeVoidAsync("showToast", message, "success");
            StateHasChanged();
        }
        else
        {
            await JS.InvokeVoidAsync("showToast", "Eroare la salvarea cÄƒrÈ›ii! âŒ", "error");
        }
    }

    private async Task DeleteBook(int bookId)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "EÈ™ti sigur cÄƒ vrei sÄƒ È™tergi aceastÄƒ carte?");
        if (confirmed)
        {
            var success = await PageManager.DeleteBookAsync(bookId);
            if (success)
            {
                await JS.InvokeVoidAsync("showToast", "Cartea a fost È™tearsÄƒ cu succes! ğŸ—‘ï¸", "success");
                StateHasChanged();
            }
            else
            {
                await JS.InvokeVoidAsync("showToast", "Eroare la È™tergerea cÄƒrÈ›ii! âŒ", "error");
            }
        }
    }

    private async Task DownloadCSV()
    {
        try
        {
            var csv = PageManager.ExportToCSV();
            var bytes = System.Text.Encoding.UTF8.GetBytes(csv);
            var base64 = Convert.ToBase64String(bytes);
            var dataUrl = $"data:text/csv;charset=utf-8;base64,{base64}";
            var filename = $"carti_{DateTime.Now:yyyyMMdd_HHmmss}.csv";

            await JS.InvokeVoidAsync("downloadFile", dataUrl, filename);
            await JS.InvokeVoidAsync("showToast", $"âœ… Exportate {PageManager.Books?.Count ?? 0} cÄƒrÈ›i!", "success");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error exporting CSV: {ex.Message}");
            await JS.InvokeVoidAsync("showToast", "âŒ Eroare la export!", "error");
        }
    }

    private async Task ScrollToResults()
    {
        try
        {
            await JS.InvokeVoidAsync("scrollToElement", "books-list-start");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error scrolling: {ex.Message}");
        }
    }
}